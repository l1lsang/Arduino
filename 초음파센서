C++
const int trig = 4;
const int echo = 3;

void setup() {
pinMode(trig, OUTPUT);
pinMode(echo, INPUT);
Serial.begin(9600);
}

void loop() {
digitalWrite(echo,LOW);
digitalWrite(trig,LOW);
delayMicroseconds(2);
digitalWrite(trig,HIGH);
delayMicroseconds(10);
digitalWrite(trig, LOW);

long duration = pulseIn(echo, HIGH);
float distance = duration/29/2;

Serial.print(distance);
Serial.println(" cm");

delay(100);
}
